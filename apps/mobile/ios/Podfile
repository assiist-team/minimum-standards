# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'MinimumStandardsMobile' do
  config = use_native_modules!
  use_modular_headers!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix module build issues and build settings for all targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |build_config|
        # Fix module build issues
        build_config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        build_config.build_settings['DEFINES_MODULE'] = 'YES'
        
        # Fix for "Could not build module" errors
        build_config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        build_config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'NO'
        
        # Ensure proper deployment target
        if build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 15.0
          build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
        end
        
        # Fix for module map issues
        build_config.build_settings['SWIFT_VERSION'] = '5.0'
        
        # Remove problematic module map flags that might cause conflicts
        if build_config.build_settings['OTHER_CFLAGS']
          if build_config.build_settings['OTHER_CFLAGS'].is_a?(String)
            build_config.build_settings['OTHER_CFLAGS'] = build_config.build_settings['OTHER_CFLAGS'].gsub(/-fmodule-map-file=[^\s]+/, '')
          elsif build_config.build_settings['OTHER_CFLAGS'].is_a?(Array)
            build_config.build_settings['OTHER_CFLAGS'] = build_config.build_settings['OTHER_CFLAGS'].reject { |flag| flag.to_s.include?('-fmodule-map-file=') && flag.to_s.include?('react_runtime') }
          end
        end
        
        # Fix gRPC-C++ modulemap path
        if target.name == 'gRPC-C++'
          other_cflags = build_config.build_settings['OTHER_CFLAGS'] || '$(inherited)'
          if other_cflags.is_a?(String)
            fixed_flags = other_cflags.gsub(
              '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
              '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
            )
            build_config.build_settings['OTHER_CFLAGS'] = fixed_flags
          elsif other_cflags.is_a?(Array)
            build_config.build_settings['OTHER_CFLAGS'] = other_cflags.map do |flag|
              flag.gsub(
                '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
                '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
              )
            end
          end
        end
      end
    end
    
    # Fix react_runtime module map redefinition issue
    # Remove duplicate module maps from Headers/Public
    react_runtime_modulemap = File.join(installer.sandbox.root, 'Headers/Public/react_runtime/React-jsitooling.modulemap')
    if File.exist?(react_runtime_modulemap)
      # Check if there's a conflict and remove the duplicate
      File.delete(react_runtime_modulemap) rescue nil
    end
    
    # Also fix the xcconfig files directly
    xcconfig_path = File.join(installer.sandbox.root, 'Target Support Files/gRPC-C++/gRPC-C++.debug.xcconfig')
    if File.exist?(xcconfig_path)
      text = File.read(xcconfig_path)
      text.gsub!(
        '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
        '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
      )
      File.write(xcconfig_path, text)
    end
    
    xcconfig_path = File.join(installer.sandbox.root, 'Target Support Files/gRPC-C++/gRPC-C++.release.xcconfig')
    if File.exist?(xcconfig_path)
      text = File.read(xcconfig_path)
      text.gsub!(
        '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
        '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
      )
      File.write(xcconfig_path, text)
    end
  end
end
