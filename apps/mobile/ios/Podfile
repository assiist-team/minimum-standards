# Resolve react_native_pods.rb with node to allow for hoisting
# Explicitly disable New Architecture for podspec evaluation
ENV['RCT_NEW_ARCH_ENABLED'] = '0'

require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

require 'fileutils'

ruby_compat_dir = File.expand_path('../ruby_compat', __dir__)
$LOAD_PATH.unshift(ruby_compat_dir) unless $LOAD_PATH.include?(ruby_compat_dir)

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Firebase Swift pods require frameworks to generate Swift bridging headers
# Use static linkage for React Native compatibility
use_frameworks! :linkage => :static

target 'MinimumStandardsMobile' do
  config = use_native_modules!

  # Force GTMSessionFetcher/Core to a version that satisfies both Firebase (>= 3.4, < 6.0) 
  # and GoogleSignIn (~> 3.3, which means >= 3.3, < 4.0)
  # Using 3.4.0 which satisfies both constraints
  pod 'GTMSessionFetcher/Core', '3.4.0'

  # Enable modular headers for Firebase dependencies (required for Swift pods)
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseCoreExtension', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  pod 'FirebaseAppCheckInterop', :modular_headers => true
  pod 'FirebaseAuth', :modular_headers => true
  pod 'FirebaseAuthInterop', :modular_headers => true
  pod 'FirebaseFirestore', :modular_headers => true
  pod 'FirebaseFirestoreInternal', :modular_headers => true
  pod 'FirebaseMessaging', :modular_headers => true
  pod 'GoogleUtilities', :modular_headers => true
  pod 'RecaptchaInterop', :modular_headers => true

  use_react_native!(
    :path => config[:reactNativePath],
    :fabric_enabled => false,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    legacy_grpc_modulemap = '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap'
    new_grpc_modulemap = '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
    modulemap_keys = %w[
      OTHER_CFLAGS
      OTHER_SWIFT_FLAGS
      OTHER_CPLUSPLUSFLAGS
      OTHER_LDFLAGS
      OTHER_CCFLAGS
    ]
    # Some pods already ship module maps and forcing DEFINES_MODULE causes redefinition
    force_no_module_targets = %w[
      ReactCommon
    ]
    private_headers_root =
      if installer.sandbox.respond_to?(:private_headers_root) && installer.sandbox.private_headers_root
        installer.sandbox.private_headers_root
      else
        File.join(installer.sandbox.root, 'Headers/Private')
      end

    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix module build issues and build settings for all targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |build_config|
        # Fix module build issues
        build_config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        build_config.build_settings['DEFINES_MODULE'] =
          force_no_module_targets.include?(target.name) ? 'NO' : 'YES'
        
        # Fix for "Could not build module" errors
        build_config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        build_config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'NO'
        
        # Ensure proper deployment target
        if build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 15.0
          build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
        end
        
        # Fix for module map issues
        build_config.build_settings['SWIFT_VERSION'] = '5.0'

        # Force disable RCT_NEW_ARCH_ENABLED in build settings
        if build_config.build_settings['GCC_PREPROCESSOR_DEFINITIONS']
          if build_config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].is_a?(Array)
            build_config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].delete('RCT_NEW_ARCH_ENABLED=1')
          elsif build_config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].is_a?(String)
            build_config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = 
              build_config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].gsub('RCT_NEW_ARCH_ENABLED=1', '')
          end
        end
        
        modulemap_keys.each do |key|
          value = build_config.build_settings[key]
          next if value.nil?

          if value.is_a?(String)
            build_config.build_settings[key] = value.gsub(legacy_grpc_modulemap, new_grpc_modulemap)
          elsif value.is_a?(Array)
            build_config.build_settings[key] = value.map { |flag| flag.gsub(legacy_grpc_modulemap, new_grpc_modulemap) }
          end
        end
      end
    end
    
    # Fix react_runtime module map redefinition issue
    # Only React-RuntimeCore module map should live under react_runtime headers
    react_runtime_modulemap = File.join(installer.sandbox.root, 'Headers/Public/react_runtime/React-jsitooling.modulemap')
    File.delete(react_runtime_modulemap) if File.exist?(react_runtime_modulemap)

    # Remove stale references to the deleted module map from xcconfig files
    Dir.glob(File.join(installer.sandbox.root, 'Target Support Files', '**', '*.xcconfig')).each do |xcconfig_path|
      text = File.read(xcconfig_path)
      updated = text.gsub(/ ?-fmodule-map-file="\$\{PODS_ROOT\}\/Headers\/Public\/react_runtime\/React-jsitooling\.modulemap"/, '')
      updated = updated.gsub(/ ?-Xcc -fmodule-map-file="\$\{PODS_ROOT\}\/Headers\/Public\/react_runtime\/React-jsitooling\.modulemap"/, '')
      updated = updated.gsub(legacy_grpc_modulemap, new_grpc_modulemap)

      if updated != text
        # Collapse duplicate spaces that may be left behind
        updated = updated.gsub(/  +/, ' ')
        File.write(xcconfig_path, updated)
      end
    end
    
    # Also fix the xcconfig files directly
    xcconfig_path = File.join(installer.sandbox.root, 'Target Support Files/gRPC-C++/gRPC-C++.debug.xcconfig')
    if File.exist?(xcconfig_path)
      text = File.read(xcconfig_path)
      text.gsub!(
        '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
        '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
      )
      File.write(xcconfig_path, text)
    end
    
    xcconfig_path = File.join(installer.sandbox.root, 'Target Support Files/gRPC-C++/gRPC-C++.release.xcconfig')
    if File.exist?(xcconfig_path)
      text = File.read(xcconfig_path)
      text.gsub!(
        '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
        '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
      )
      File.write(xcconfig_path, text)
    end

    # ReactCommon already defines its own module map; ensure DEFINES_MODULE stays disabled
    %w[
      ReactCommon/ReactCommon.debug.xcconfig
      ReactCommon/ReactCommon.release.xcconfig
    ].each do |relative_path|
      xcconfig_path = File.join(installer.sandbox.root, 'Target Support Files', relative_path)
      next unless File.exist?(xcconfig_path)

      text = File.read(xcconfig_path)
      updated = text.gsub('DEFINES_MODULE = YES', 'DEFINES_MODULE = NO')
      File.write(xcconfig_path, updated) if updated != text
    end

    # Ensure legacy gRPC module map path exists for targets that still reference it
    grpc_modulemap_src = File.join(installer.sandbox.root, 'gRPC-Core/include/grpc/module.modulemap')
    grpc_modulemap_dst = File.join(private_headers_root, 'grpc/gRPC-Core.modulemap')
    if File.exist?(grpc_modulemap_src)
      FileUtils.mkdir_p(File.dirname(grpc_modulemap_dst))
      FileUtils.cp(grpc_modulemap_src, grpc_modulemap_dst)
    end
    
    # Fix hermes-engine script phase to ensure NODE_BINARY is set
    installer.pods_project.targets.each do |target|
      if target.name == 'hermes-engine'
        target.build_phases.each do |phase|
          if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase)
            if phase.name && phase.name.include?('Replace Hermes')
              # Prepend export NODE_BINARY to the script
              phase.shell_script = "export NODE_BINARY=#{`which node`.strip}\n" + phase.shell_script
            end
          end
        end
      end
    end
  end
end
