# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

require 'fileutils'

ruby_compat_dir = File.expand_path('../ruby_compat', __dir__)
$LOAD_PATH.unshift(ruby_compat_dir) unless $LOAD_PATH.include?(ruby_compat_dir)

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'MinimumStandardsMobile' do
  config = use_native_modules!
  use_modular_headers!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix module build issues and build settings for all targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |build_config|
        # Fix module build issues
        build_config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        build_config.build_settings['DEFINES_MODULE'] = 'YES'
        
        # Fix for "Could not build module" errors
        build_config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        build_config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'NO'
        
        # Ensure proper deployment target
        if build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 15.0
          build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
        end
        
        # Fix for module map issues
        build_config.build_settings['SWIFT_VERSION'] = '5.0'
        
        # Fix gRPC-C++ modulemap path
        if target.name == 'gRPC-C++'
          other_cflags = build_config.build_settings['OTHER_CFLAGS'] || '$(inherited)'
          if other_cflags.is_a?(String)
            fixed_flags = other_cflags.gsub(
              '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
              '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
            )
            build_config.build_settings['OTHER_CFLAGS'] = fixed_flags
          elsif other_cflags.is_a?(Array)
            build_config.build_settings['OTHER_CFLAGS'] = other_cflags.map do |flag|
              flag.gsub(
                '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
                '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
              )
            end
          end
        end
      end
    end
    
    # Fix react_runtime module map redefinition issue
    # Only React-RuntimeCore module map should live under react_runtime headers
    react_runtime_modulemap = File.join(installer.sandbox.root, 'Headers/Public/react_runtime/React-jsitooling.modulemap')
    File.delete(react_runtime_modulemap) if File.exist?(react_runtime_modulemap)

    # Remove stale references to the deleted module map from xcconfig files
    Dir.glob(File.join(installer.sandbox.root, 'Target Support Files', '**', '*.xcconfig')).each do |xcconfig_path|
      text = File.read(xcconfig_path)
      updated = text.gsub(/ ?-fmodule-map-file="\$\{PODS_ROOT\}\/Headers\/Public\/react_runtime\/React-jsitooling\.modulemap"/, '')
      updated = updated.gsub(/ ?-Xcc -fmodule-map-file="\$\{PODS_ROOT\}\/Headers\/Public\/react_runtime\/React-jsitooling\.modulemap"/, '')

      if updated != text
        # Collapse duplicate spaces that may be left behind
        updated = updated.gsub(/  +/, ' ')
        File.write(xcconfig_path, updated)
      end
    end
    
    # Also fix the xcconfig files directly
    xcconfig_path = File.join(installer.sandbox.root, 'Target Support Files/gRPC-C++/gRPC-C++.debug.xcconfig')
    if File.exist?(xcconfig_path)
      text = File.read(xcconfig_path)
      text.gsub!(
        '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
        '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
      )
      File.write(xcconfig_path, text)
    end
    
    xcconfig_path = File.join(installer.sandbox.root, 'Target Support Files/gRPC-C++/gRPC-C++.release.xcconfig')
    if File.exist?(xcconfig_path)
      text = File.read(xcconfig_path)
      text.gsub!(
        '${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap',
        '${PODS_ROOT}/gRPC-Core/include/grpc/module.modulemap'
      )
      File.write(xcconfig_path, text)
    end

    # Ensure legacy gRPC module map path exists for targets that still reference it
    grpc_modulemap_src = File.join(installer.sandbox.root, 'gRPC-Core/include/grpc/module.modulemap')
    grpc_modulemap_dst = File.join(installer.sandbox.root, 'Headers/Private/grpc/gRPC-Core.modulemap')
    if File.exist?(grpc_modulemap_src)
      FileUtils.mkdir_p(File.dirname(grpc_modulemap_dst))
      FileUtils.cp(grpc_modulemap_src, grpc_modulemap_dst)
    end
  end
end
